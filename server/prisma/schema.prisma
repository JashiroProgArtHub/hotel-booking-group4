generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  HOTEL_OWNER
  ADMIN
}

enum PropertyType {
  HOTEL
  RESORT
  APARTMENT
  GUESTHOUSE
}

enum PropertyStatus {
  PENDING
  APPROVED
  REJECTED
  PUBLISHED
  SUSPENDED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model User {
  id          String   @id @default(cuid())
  clerkUserId String   @unique
  email       String   @unique
  firstName   String?
  lastName    String?
  role        Role     @default(CUSTOMER)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  properties         Property[] @relation("UserProperties")
  reviewedProperties Property[] @relation("AdminReviews")
  bookings           Booking[]
}

model Property {
  id              String         @id @default(cuid())
  ownerId         String
  name            String
  description     String         @db.Text
  propertyType    PropertyType
  address         String
  city            String         @default("Cordova, Cebu")
  latitude        Float
  longitude       Float
  contactEmail    String
  amenities       String[]
  images          String[]
  checkInTime     String
  checkOutTime    String
  houseRules      String?        @db.Text
  status          PropertyStatus @default(PENDING)
  submissionDate  DateTime       @default(now())
  reviewedDate    DateTime?
  reviewedById    String?
  rejectionReason String?        @db.Text
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  owner      User  @relation("UserProperties", fields: [ownerId], references: [id])
  reviewedBy User? @relation("AdminReviews", fields: [reviewedById], references: [id])

  roomTypes RoomType[]
  bookings  Booking[]
}

model RoomType {
  id               String   @id @default(cuid())
  propertyId       String
  name             String
  description      String?
  bedConfiguration String
  maxAdults        Int
  maxChildren      Int
  pricePerNight    Float
  availableRooms   Int
  images           String[]
  amenities        String[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  bookings Booking[]
}

model Booking {
  id             String        @id @default(cuid())
  bookingId      String        @unique
  userId         String
  propertyId     String
  roomTypeId     String
  checkInDate    DateTime
  checkOutDate   DateTime
  numberOfNights Int
  adults         Int
  children       Int           @default(0)
  subtotal       Float
  taxesAndFees   Float
  totalAmount    Float
  bookingStatus  BookingStatus @default(PENDING)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  user     User     @relation(fields: [userId], references: [id])
  property Property @relation(fields: [propertyId], references: [id])
  roomType RoomType @relation(fields: [roomTypeId], references: [id])

  // payment Payment?
}
